{
  "expo": {
    "name": "Omnara",
    "slug": "omnara",
    "version": "1.4.5",
    "orientation": "portrait",
    "icon": "./assets/icon_with_bg.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "omnara",
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1e1b29"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.omnara.app",
      "buildNumber": "1",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSPhotoLibraryUsageDescription": "Omnara lets you attach screenshots or other images when sharing context with your AI agents.",
        "NSMicrophoneUsageDescription": "Omnara uses your microphone to transcribe voice messages into text for easier communication with your AI agents.",
        "NSSpeechRecognitionUsageDescription": "Omnara uses speech recognition to convert your voice into text messages when using voice input."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#1e1b29"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.omnara.app",
      "versionCode": 1
    },
    "web": {
      "favicon": "./assets/favicons/favicon-32x32.png"
    },
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 30000,
      "url": "https://u.expo.dev/bf57bae5-cddb-429a-8c0b-dd42e3d40536"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#f59e0b",
          "androidMode": "default",
          "androidCollapsedTitle": "Agent needs input",
          "iosDisplayInForeground": true
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "newArchEnabled": true
          },
          "android": {
            "newArchEnabled": true
          }
        }
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.50945566095-dr946se40prbi6itu2hfdc321icbui65"
        }
      ],
      "expo-web-browser",
      "expo-apple-authentication",
      "expo-updates",
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "mobile-app",
          "organization": "omnara"
        }
      ],
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "bf57bae5-cddb-429a-8c0b-dd42e3d40536"
      }
    },
    "owner": "omnara"
  }
}
